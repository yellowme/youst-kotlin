<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--region Dashboard-->

    <style name="MiniApps" />

    <style name="MiniApps.Chords" />

    <style name="MiniApps.Chords.Title" parent="TextAppearance">
        <item name="android:paddingStart">@dimen/dimen_2</item>
        <item name="android:paddingEnd">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">?attr/textTitle</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="MiniApps.Chords.Selected" parent="TextAppearance.Bold">
        <item name="android:paddingStart">@dimen/dimen_2</item>
        <item name="android:paddingEnd">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/size_80</item>
        <item name="android:textColor">?attr/textTitle</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="autoSizeMaxTextSize">@dimen/size_80</item>
        <item name="autoSizeMinTextSize">@dimen/size_40</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MiniApps.Chords.OptionItem" parent="MiniApps.Chords" />

    <style name="MiniApps.Chords.OptionItem.Label" parent="TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_60</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">?attr/textTitle</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="autoSizeMaxTextSize">@dimen/size_60</item>
        <item name="autoSizeMinTextSize">@dimen/size_30</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MiniApps.ContactUs" parent="TextAppearance">
        <item name="android:paddingStart">@dimen/dimen_2</item>
        <item name="android:paddingEnd">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/textTitle</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="autoSizeMaxTextSize">@dimen/size_22</item>
        <item name="autoSizeMinTextSize">@dimen/size_14</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!--endregion-->
</resources>
