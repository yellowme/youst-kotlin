<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/olive">

    <TextView
        android:id="@+id/mainLabel"
        style="@style/AppHero.TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"
        tools:text="@string/component_holder_hero_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secondaryAction"
        style="@style/AppHero.Action"
        android:layout_margin="@dimen/dimen_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        tools:text="@string/component_holder_hero_action_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainAction"
        style="@style/AppHero.Action"
        android:layout_margin="@dimen/dimen_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="percent"
        tools:text="@string/component_holder_hero_action_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
